<h1>Payment Results</h1>
<dl>
  <dt>
    APR
  </dt>
  <dd>
    <%= number_to_percentage(@APR, precision:4) %>
  </dd>
  <dt>
    Number of years
  </dt>
  <dd>
    <%= @years %>
  </dd>
  <dt>
    Principal
  </dt>
  <dd>
    <%= number_to_currency(@principal) %>
  </dd>
  <dt>
    Payment
  </dt>
  <dd>
    <%= number_to_currency(@monthly) %>
  </dd>
</dl>
<p>
  <a href="/payment/new"> Calculate another payment </a>
</p>